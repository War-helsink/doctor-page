---
import Footer from "components/Footer.astro";
import Header from "components/Header.astro";

interface Props {
  title: string;
  description: string;
  keywords: string;
}

const { title, description, keywords } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
  </head>
  <body class="relative antialiased m-0 w-dvw h-dvh bg-custom-dark">
    <Header />
    <main class="bg-white relative z-10">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  main::before {
    content: "";
    position: absolute;
    z-index: -1;
    width: 100%;
    height: 100%;
    left: 0;
    bottom: 0;
    background:
      linear-gradient(90deg, rgb(255 255 255 / 1) 22px, transparent 1%) 50%,
      linear-gradient(rgb(255 255 255 / 1) 22px, transparent 1%) 50%,
      #a5aeb850;
    background-position: center center;
    background-size: 24px 24px;
    mask-image: linear-gradient(180deg, transparent 5%, #ffffff);
  }
</style>
