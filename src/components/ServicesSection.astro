---
import background from "assets/background.svg";
import { services } from "collections/services";
---

<section id="services" class="relative py-16 text-custom-dark">
  <img id="background" src={background.src} alt="" fetchpriority="high" />
  <div class="relative container mx-auto px-4 sm:px-0 z-10">
    <h2 class="text-center text-4xl font-bold mb-8">Servicios que Ofrecemos</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        services.map((service) => (
          <div class="service-card p-6 bg-white text-gray-900 rounded-lg shadow-lg flex flex-col items-center transition-all duration-300 ease-in-out cursor-pointer hover:translate-y-[-10px] hover:shadow-[0_10px_20px_rgba(0,_0,_0,_0.1)]">
            <h3 class="text-xl font-semibold mb-2">{service.label}</h3>
            <p class="text-center mb-4">{service.description}</p>
            <span class="font-bold text-primary">${service.price}</span>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  #background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    filter: blur(100px);
  }
</style>
